html
    include includes/head.pug
    body
        if success_messages
            .alert.alert-sucess=success_messages
        if error_messages
            .alert.alert-danger=error_messages
        .header-container
            .header-text Spelling Bee Admin
        .container 
            div(class="row justify-content-center")
                div(class="col-sm-10 col-md-6") 
                    form
                        .form-group
                            label(for='userEmail') Email address
                            input#userEmail.form-control(type='email' aria-describedby='emailHelp')
                            small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
                        .form-group
                            label(for='userPassword') Password
                            input#userPassword.form-control(type='password')
                        .form-group.form-check
                            input#rememberCheck.form-check-input(type='checkbox')
                            label.form-check-label(for='exampleCheck1') Remember me
                            button.btn.btn-primary.float-right(type='submit') Submit
